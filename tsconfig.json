{
  "compilerOptions": {
    "rootDir": "src",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "lib": ["ES2015", "DOM"],
    "paths": {
      "simple-mobile": ["src/index.ts"],
      "simple-mobile/src/*": ["src/*"],
      "simple-mobile/lib/*": ["src/*"],
      "demos": ["src/demos/index.ts"],
      "utils": ["src/utils/index.ts"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "include": ["src", ".dumi/theme"],
  "exclude": ["node_modules", "lib", "es", "dist"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  }
}
